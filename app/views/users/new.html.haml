%div{ title: t('users.account_signup'), id: "signupform", class: "form" }
  = form_tag action: "create" do

    = get_list_of_error_messages_for @user
    %br/

    = render_flash

    %h3= @heading

    %table
      %tr
        %td
          %label{for: "user_login"}
            = t('users.desired_login')
        %td
          = text_field "user", "login", size: 20
      %tr
        %td
          %label{for: "user_password"}
            = t('users.choose_password') + ":"
        %td
          = password_field "user", "password", size: 20
      %tr
        %td
          %label{ for: "user_password_confirmation"}
            = t('users.confirm_password')
        %td
          = password_field "user", "password_confirmation", size: 20
      %tr
        %td/
        %td
          &= submit_tag "#{t('users.signup')} &#187;".html_safe, id: "signup",
                        class: "primary"
